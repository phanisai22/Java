<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" fx:id="nameToGreet"
        onKeyReleased="#handleKeyReleased"/>

    <Button GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" text="Greet them"
        onAction="#OnButtonClick" fx:id="greetButton"/>

    <Button GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.columnSpan="2" text="Send off"
        onAction="#OnButtonClick" fx:id="byeButton"/>

    <CheckBox text="Clear the text after clicking a button" GridPane.rowIndex="2" GridPane.columnIndex="0"
        onAction="#handleCheckBox" fx:id="ourCheckbox"/>

</GridPane>