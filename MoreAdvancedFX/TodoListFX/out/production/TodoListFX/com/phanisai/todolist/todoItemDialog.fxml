<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.phanisai.todolist.DialogController"
            >

    <headerText>
        Your new ToDo Item goes here ...
    </headerText>

    <content>
        <GridPane hgap="10" vgap="10">

            <Label text="Short Description : " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="description" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details : " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="DeadLine" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadline" GridPane.rowIndex="2" GridPane.columnIndex="1"/>


        </GridPane>
    </content>

</DialogPane>
